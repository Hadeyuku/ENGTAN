<section class="inner">
	<h2 class="section-ttl">単語詳細</h2>
	<div class="flex">
		<div>
			<div class="image_field">
				<%= attachment_image_tag @word, :image, format: "jpeg", id: "img_prev", fallback: "no-image.png", class: "admin_item_image" %>
			</div>
		</div>
		<table class="admin_item_info">
			<thead>
				<tr>
					<th></th>	
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>単語</td>
					<td><%= @word.name %></td>
				</tr>
				<tr>
					<td>品詞</td>
					<td><%= @word.part_of_speech_i18n %></td>
				</tr>
				<tr>
					<td>意味</td>
					<td><%= @word.meaning %></td>
				</tr>
				<tr>
					<td>例文</td>
					<td><%= @word.sentence %></td>
				</tr>
                <tr>
					<td>メモ</td>
					<td><%= @word.memo %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= link_to "編集する", edit_word_path(@word), class: "btn btn-success" %>
		</div>
	</div>
</section>