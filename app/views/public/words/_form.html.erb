<%= form_for(word, url: url) do |f| %>
	<div class="flex">
		<table>
			<thead>
				<tr>
					<th></th>	
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "単語" %></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td><%= f.label :part_of_speech, "品詞" %></td>
					<td><%= f.text_field :part_of_speech %></td>
				</tr>
				<tr>
					<td><%= f.label :meaning, "意味" %></td>
					<td><%= f.text_field :meaning %></td>
				</tr>
				<tr>
					<td><%= f.label :sentence, "例文" %></td>
					<td><%= f.text_area :sentence, rows: 3 %></td>
				</tr>
				<tr>
					<td><%= f.label :memo, "メモ" %></td>
					<td><%= f.text_area :memo, rows: 3 %></td>
				</tr>
			</tbody>
		</table>
        <div>
			<%= f.label :image, "画像" %>
			<div class="image_field">
				<%= attachment_image_tag word, :image, format: "jpeg", id: "img_prev", fallback: "no-image.png"%>
				<span class="btn btn-file btn-info"><%= f.attachment_field :image %>画像選択</span>
			</div>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <% if admin_signed_in? %>
                <%= f.hidden_field :jenre, value: ENGTAN %>
            <% end %>

		</div>
		<div class="flex align-center pl5">
			<%= f.submit submit, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>