<section>
	<h2><%= @customer.full_name %>の編集</h2>
    <%= form_for(@customer, url: update_customer_path(@customer)) do |f| %>
        <table class="table-common">
            <thead>
                <tr>
                    <th></th>	
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= f.label :family_name, "名前(姓）" %></td>
                    <td><%= f.text_field :family_name %></td>
                </tr>
                <tr>
                    <td><%= f.label :first_name, "名前(名）" %></td>
                    <td><%= f.text_field :first_name %></td>
                </tr>
                <tr>
                    <td><%= f.label :email, "メール" %></td>
                    <td><%= f.text_field :email %></td>
                </tr>
                <tr>
                    <td><%= f.label :status, "ステータス" %></td>
                    <td><%= f.select :status, Customer.statuses.keys.map {|k| [I18n.t("enums.customer.status.#{k}"), k]} %></td>
                </tr>
            </tbody>
        </table>
        <div class="flex align-center">
            <%= f.submit 'confirm', class: "btn btn-primary" %>
        </div>
    <% end %>
</section>