<section>
  <div class="flex align-center">
    <h3>新規登録はこちらから</h3>
    <% if @customer.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="flex align-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <table>
        <tbody>
          <tr>
              <td><%= f.label :family_name, "名前（姓）" %></td>
              <td><%= f.text_field :family_name, autofocus: true %></td>
          </tr>
          <tr>
              <td><%= f.label :first_name, " 名前（名）" %></td>
              <td><%= f.text_field :first_name, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true %><td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)" %></td>
            <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
            <% end %><br />
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </tbody>
      </table>
      <div class="flex align-center">
            <%= f.submit "Register", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</section>
<div class="container">
  <div class="row">
    <div class="col-lg-12 flex space-between">
      <ul style="list-style: none;">
        <li><h6>登録なしてすぐに使い方</h6></li>
        <li><%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, method: :post, class: "btn btn-primary" %></li>
      </ul>
      <ul style="list-style: none;">
        <li><h6>既に登録済みの方</h6></li>
        <li><%= link_to "こちら",new_customer_session_path, class: "btn btn-primary" %></li>
      </ul>
    </div>
  </div>
</div>